<div class = "backimg-homes-forcom-1">
<div class = "mask-homes-forcom-1">
<div class = "container pt-5">
  <div class="col-md-8 mx-auto">
    <h1 class = "pb-3">企業専用 登録フォーラム</h1>
    <%= form_with model: @contact, url: "/homes/create",  local: true do |form| %>
      <div class="form-group">
        <%= form.label "会社名" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label "メールアドレス" %>
        <%= form.text_field :email, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label "主な事業内容" %>
        <%= form.text_field :business, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label "登録理由" %>
        <%= form.text_area :reason, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label "その他" %>
        <%= form.text_area :other, class: "form-control" %>
      </div>
      <%= form.submit '登録をする', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
</div>
</div>
</div>