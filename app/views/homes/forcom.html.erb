<div class = "backimg-homes-forcom-1">
  <div class = "mask-homes-forcom-1">
    <div class = "container pt-5">
      <div class="col-md-8 offset-md-3 pt-3 mx-auto">
      <img class = "img-small pl-5 ml-3 mt-0 mb-0 pb-0 arrange-registrations-new d-block" src= "/assets/logo.png" alt="ExJan">
        <h2 class = "pb-3 text-center form-title-new">企業専用 登録フォーラム</h2>
        <%= render "shared/errors", obj:@contact%>
        <%= form_with model: @contact, url: "/homes/create",  local: true do |form| %>
          <div class="form-group">
            <%= form.label "会社名" %>
            <div class = "col-12">
              <%= form.text_field :name, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= form.label "メールアドレス" %>
            <div class = "col-12">
              <%= form.text_field :email, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= form.label "主な事業内容" %>
            <div class = "col-12">
              <%= form.text_field :business, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= form.label "登録理由" %>
            <div class = "col-12">
              <%= form.text_area :reason, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= form.label "その他" %>
            <div class = "col-12">
              <%= form.text_area :other, class: "form-control" %>
            </div>
          </div>
          <%= form.submit '登録する', class: "btn border-muted mb-5" %>
        <% end %>
      </div>
    </div>
  </div>
</div>