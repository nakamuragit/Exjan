<div class = "back-img">
	<div class = "container mt-5 pt-5">
	<h4 class = "ml-5 pl-3">案件を検索</h4>
	<div class = "col-12 form-inline">
		<div class="form-group w-100 mt-3">
				<%= search_form_for @q, html: {class: "arrange-3"} do |f| %>
				<%= f.search_field :company_name_cont, class: "form-control w-75" %>
				<%= f.submit '会社名検索', class: "btn btn-success"%>
				</div>
				<% end %>
	</div>

	<div class="field form-group mt-5 pt-5">
    <div class="col-10 btn-group-toggle row mx-auto" data-toggle="buttons">
    <label class="btn btn-outline-danger active" style="width:25%">
      <input type="radio" name="example" value="サンプル">会社名
    </label>
    <label class="btn btn-outline-secondary" style="width:25%">
      <input type="radio" name="example" value="サンプル" class ="btn-lg">金額
    </label>
		<label class="btn btn-outline-secondary" style="width:25%">
      <input type="radio" name="example" value="サンプル" class ="btn-lg">期間
    </label>
		<label class="btn btn-outline-secondary" style="width:25%">
      <input type="radio" name="example" value="サンプル" class ="btn-lg">対応サイト
    </label>
    </div>
  </div>

	<div class="field form-group mt-3 pt-1 pr- 5 mr-5">
    <div class="col-10 btn-group-toggle row" data-toggle="buttons">
			<label class="btn btn-outline-secondary" style="width:25%">
				<input type="radio" name="example" value="サンプル">広告方法
			</label>
			<label class="btn btn-outline-secondary" style="width:25%">
				<input type="radio" name="example" value="サンプル" class ="btn-lg">必要知名度
			</label>
    </div>
  </div>
</div>