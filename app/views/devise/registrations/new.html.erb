<div class = "backimg-registrations-devise-new-1">
  <div class = "backimg-registrations-mask-devise-new-1">
    <div class = "col-md-6 offset-md-3 pt-3">
    <h2 class = "pt-5">ライブ配信者用 登録フォーム</h2>
    <%= render "shared/errors", obj:@user %>
    <br />
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="field form-group">
        <%= f.label :email %><br />
        <div class="col-12">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"%>
        </div>
      </div>
      <div class="field form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          (最低<%= @minimum_password_length %>文字)
        <% end %><br />
        <div class="col-12">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control"%>
        </div>
      </div>
      <div class="field form-group">
        <%= f.label :password_confirmation %>
        <div class = "col-12">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>
      <div class="field form-group">
        <%= f.label :active_site %>
        <div class="col-12 btn-group-toggle row mx-auto" data-toggle="buttons">
          <label class="btn btn-outline-danger" style="width:50%">
            <%= f.radio_button :active_site, "youtube" %>YouTube
          </label>
          <label class="btn btn-outline-secondary" style="width:50%">
            <%= f.radio_button :active_site, "Twitch" %>Twitch
          </label>
        </div>
      </div>
      <div class ="field form-group">
      <%= f.label :active_url %>
        <div class = "col-12">
          <%= f.text_field :active_url, class: "form-control" %>
        </div>
      </div>
      <div class ="field form-group">
        <%= f.label :channel_name %>
        <div class = "col-12">
          <%= f.text_field :channel_name, class: "form-control" %>
        </div>
      </div>
    <div class ="field form-group">
      <%= f.label :stage_name %>
        <div class = "col-12">
          <%= f.text_field :stage_name, class: "form-control" %>
        </div>
    </div>
    <br />
      <div class="actions form-group">
        <%= f.submit "Sign up", class: "btn border border-muted" %>
      </div>
    <% end %>
    </div>
  </div>
</div>